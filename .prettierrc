{
  "trailingComma": "all",
  "tabWidth": 2,
  "bracketSpacing": true,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "plugins": [
    "prettier-plugin-java",
    "prettier-plugin-sql-cst",
    "prettier-plugin-organize-imports"
  ],
  "overrides": [
    {
      "files": ["*.html", "*.njk"],
      "options": {
        "parser": "html",
        "printWidth": 80,
        "bracketSpacing": false,
        "bracketSameLine": true
      }
    },
    {
      "files": ["*.java"],
      "options": {
        "parser": "java"
      }
    }
  ]
}
